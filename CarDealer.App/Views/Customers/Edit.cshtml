@model OrderedCustomerModel

@{
    ViewData["Title"] = "Edit Customer";
}
<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input required asp-for="Name" type="text" />
        <span asp-validation-for="Name" class="text-danger"></span>
        <br />
    </div>
    <div class="form-group">
        <label asp-for="BirthDate">Birth date</label>
        <input asp-for="BirthDate" type="date" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
        <br />
    </div>
    <div class="form-group">
        <label asp-for="IsYoungDriver">Young driver?</label>
        <input asp-for="IsYoungDriver" />
        <br />
    </div>
    <button type="submit" class="warning">Edit</button>
</form>
