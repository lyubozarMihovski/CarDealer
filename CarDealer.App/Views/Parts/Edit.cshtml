@model PartFormModel

@{
    ViewData["Title"] = "Edit Part";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input required readonly asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input required asp-for="Price" min="0" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input required asp-for="Quantity" min="1" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
                <br />
            </div>
            <div>
                <input type="submit" class="btn btn-success" value="Edit Part" />
            </div>
        </form>
    </div>
</div>