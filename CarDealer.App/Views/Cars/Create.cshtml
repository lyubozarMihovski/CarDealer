@model CarFormModel

@{
    ViewData["Title"] = "Add Car";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Make"></label>
                <input required asp-for="Make" class="form-control" />
                <span asp-validation-for="Make" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <label asp-for="Model"></label>
                <input required asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <label asp-for="TravelledDistance"></label>
                <input required asp-for="TravelledDistance" min="0" class="form-control" />
                <span asp-validation-for="TravelledDistance" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <label asp-for="Parts"></label>
                <select asp-for="SelectedParts" multiple class="selectpicker form-control parts-select" asp-items="Model.Parts">
                </select>
                <small>Hold "Ctrl" to select multiple parts</small>

            </div>
            <div>
                <input type="submit" class="btn btn-success" value="Save Car" />
            </div>
        </form>
    </div>
</div>